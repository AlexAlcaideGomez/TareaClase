CREATE DATABASE Empresa;

USE Empresa;

CREATE TABLE Dietas (
    id INT AUTO_INCREMENT PRIMARY KEY,
    empleado VARCHAR(100),
    departamento VARCHAR(50),
    cantidad DECIMAL(10, 2),
    concepto TEXT
);

